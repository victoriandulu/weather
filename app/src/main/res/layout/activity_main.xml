<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

<RelativeLayout
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#03A9F4"
    android:padding="16dp">
    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="city"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="time"
        android:layout_below="@+id/city"
        android:textColor="@color/white"
        android:textSize="16dp"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/rain"
        android:layout_below="@+id/time"/>
    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/image"
        android:text="3°"
        android:textSize="60dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"/>



</RelativeLayout>

    <RelativeLayout
        android:layout_width="381dp"
        android:layout_height="74dp"
        android:layout_below="@id/rlMain"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="59dp"
            android:layout_height="41dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/temperature" />

        <TextView
            android:id="@+id/image21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image2"
            android:text="Feel Like"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image21"
            android:layout_alignLeft="@+id/image21"
            android:text="7°"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image2"
            android:layout_marginLeft="10dp"
            android:src="@drawable/temperature" />

        <TextView
            android:id="@+id/image3text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image3"
            android:text="Feel Like"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/value3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image3text"
            android:layout_alignLeft="@+id/image3text"
            android:text="7°"
            android:textSize="20dp" />


    </RelativeLayout>


</RelativeLayout>